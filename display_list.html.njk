<h1 class="mb-4 text-3xl font-extrabold text-gray-900 dark:text-white md:text-5xl lg:text-6xl">
  <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
    Index page
  </span>
</h1>

<main data-bs-scheme="light">
  <dl class="max-w-md dark:text-white dark:divide-gray-700 text-gray-900 divide-y divide-gray-200 [&>*:not(:first-child)]:pt-3">
    {% for page in [
        {
          "label": "Ajax Error",
          "description": "Showcase a captured error via firing an invalid ajax request on page mount",
          "url": "./basic-todo/failed-call.html"
        }
      , {
          "label": "Basic Todo",
          "description": "Showcase a simple todo list via firing an ajax request on page mount",
          "url": "./basic-todo/success-call.html"
        }
    ] %}
        <div class="flex flex-col pb-3">
          <dt class="text-blue-600 dark:text-blue-500 hover:underline mb-1 md:text-lg">
            <a href="{{ page.url }}" >{{ page.label }}</a>
          </dt>
          <dd class="text-lg font-semibold">
            {{ page.description }}
          </dd>
        </div>
    {% endfor %}
  </dl>
</main>
